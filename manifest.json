{
    "manifest_version": 3,
    "name": "mySkip",
    "description": "Extension for automatically skipping video ads and closing banner ads on YouTube",
    "version": "2.0",
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],           
            "js": ["main.js"],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "*://*.youtube.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "32": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    }
}
